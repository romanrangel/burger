<h2>Burgers Ordered</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
          {{burger_name}}
          	<button class="change-devoured" data-id="{{id}}">
		        DEVOUR
	          </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>These burgers were filing!</h2>

<ul>
{{#each burgers}}
    {{#if devoured}}
      <li>
          {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form>

  <div>
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>


  <button type="submit">Add Burger!</button>
</form>