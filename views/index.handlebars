<h2>Burgers Ordered</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
          {{burger_name}}
          	<button class="change" data-id="{{id}}">
		        DEVOUR
	          </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>These burgers were filing!</h2>

<ul>
{{#each burgers}}
    {{#if devoured}}
      <li>
          {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgers">Burger Name:</label>
    <input type="text" id="burgers" name="burger_name">
  </div>

  <button data-id="{{id}}" type="submit">Add Burger</button>
</form>