<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
          <button>EAT ME!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>These burgers were filing!</h2>

<ul>
{{#each burgers}}
    {{#if devoured}}
      <li>
          <button>Wasn't that yummy?</button>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Cat</button>
</form>
